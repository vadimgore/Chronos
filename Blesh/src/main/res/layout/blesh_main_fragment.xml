<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dummy_fragment_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.blesh.sdk.ui.BleshImageView
        android:id="@+id/blesh_fragment_imageview_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.blesh.sdk.ui.BleshImageView
        android:id="@+id/blesh_fragment_imageview_blurred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0" />

    <ListView
        android:id="@+id/blesh_fragment_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:clickable="true"
        android:divider="@null"
        android:scrollbars="none" />

    <ProgressBar
        android:id="@+id/bleshFragmentProgressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/blesh_couponview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp" >
    </TextView>
    
    <Button 
        android:id="@+id/bleshInfoMenuButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/info"/>

</RelativeLayout>