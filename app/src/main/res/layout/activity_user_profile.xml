<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.intel.ndg.chronos.UserProfileActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/beige">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="STYLE GOALS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@color/gray">
            </TextView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/gray"/>

            <SeekBar android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:max="2"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="being interesting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

                <TextView
                    android:text="being cool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>
            </RelativeLayout>

            <SeekBar android:id="@+id/seekBar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:max="2"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="being ignored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

                <TextView
                    android:text="being noticed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>
            </RelativeLayout>

            <TextView
                android:text="Style Preferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:textColor="@color/red"
                android:textSize="70px" >
            </TextView>

            <SeekBar android:id="@+id/seekBar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="2"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="perfromance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50px"
                    android:textColor="@color/blue"
                    android:textSize="50px"/>

                <TextView
                    android:text="prestige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50px"
                    android:textColor="@color/blue"
                    android:textSize="50px"/>

            </RelativeLayout>

            <SeekBar android:id="@+id/seekBar4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="2"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="function"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50px"
                    android:textColor="@color/blue"
                    android:textSize="50px"/>

                <TextView
                    android:text="fashion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50px"
                    android:textColor="@color/blue"
                    android:textSize="50px"/>

            </RelativeLayout>

            <TextView
                android:text="Budget Considerations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:textColor="@color/red"
                android:textSize="70px" >
            </TextView>

            <SeekBar android:id="@+id/seekBar5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="2"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50px"
                    android:textColor="@color/blue"
                    android:textSize="50px"/>

                <TextView
                    android:text="$$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blue"
                    android:textSize="50px"/>

                <TextView
                    android:text="$$$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50px"
                    android:textColor="@color/blue"
                    android:textSize="50px"/>
            </RelativeLayout>

            <TextView
                android:text="Timepiece Usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:textColor="@color/red"
                android:textSize="70px" >
            </TextView>

            <SeekBar android:id="@+id/seekBar6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="2"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="daily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50px"
                    android:textColor="@color/blue"
                    android:textSize="50px"/>

                <TextView
                    android:text="3-4 days a week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blue"
                    android:textSize="50px"/>

                <TextView
                    android:text="ocasional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50px"
                    android:textColor="@color/blue"
                    android:textSize="50px"/>
            </RelativeLayout>

            <TextView
                android:text="Timepiece Materials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:textColor="@color/red"
                android:textSize="70px" >
            </TextView>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <CheckBox android:id="@+id/checkbox_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gold"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/checkbox_titan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="titan"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/checkbox_diamonds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="diamonds"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/checkbox_leather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="leather"
                    android:onClick="onCheckboxClicked"/>
            </LinearLayout>

            <TextView
                android:text="Watch Face"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:textColor="@color/red"
                android:textSize="70px" >
            </TextView>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Spinner
                    android:id="@+id/watchface_shape_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/watchface_shape_choices"/>

                <Spinner
                    android:id="@+id/watchface_type_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/watchface_type_choices"/>

            </LinearLayout>

            <TextView
                android:text="Wrist Size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:textColor="@color/red"
                android:textSize="70px" >
            </TextView>

            <SeekBar android:id="@+id/seekBar7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="2"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="narrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50px"
                    android:textColor="@color/blue"
                    android:textSize="50px"/>

                <TextView
                    android:text="average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blue"
                    android:textSize="50px"/>

                <TextView
                    android:text="wide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50px"
                    android:textColor="@color/blue"
                    android:textSize="50px"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
